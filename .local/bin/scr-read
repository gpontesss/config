#!/bin/sh

set -e errexit

# Lists daily Scripture reading according to the Orthodox calendar.

day="$(date +"%d")"
month="$(date +"%m")"
year="$(date +"%Y")"

echo "Christos Anesti!"
link="https://www.oca.org/readings/daily/$year/$month/$day/"
echo "Scripture readings of the day: ($link)"

curl "$link" --silent \
    | htmlq "#main section ul li a" --text \
    | awk '{ print "  * " $0 }'
