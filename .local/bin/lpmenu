#!/bin/sh

alias dmenu="dmenu -i -l 10"

getoptions() {
    PRINTER=$1
    lpoptions -d "$PRINTER" -l | sed -rne 's!(\w*/\w*:).*(\*\w*) .*!\1 \2!p'
}

getoptionvalues() {
    PRINTER=$1; OPTION=$2
    lpoptions -l | grep "$OPTION" | cut -d' ' -f2- | tr ' ' '\n'
}

chooseoption() {
    PRINTER=$1
    getoptions "$PRINTER" | dmenu -p "Option" | grep -o "^\w*"
}

chooseoptionvalue() {
    PRINTER=$1; OPTION=$2
    getoptionvalues "$PRINTER" "$OPTION" | dmenu -p "$OPTION"
}

PRINTER=$(lpstat -e | dmenu -p "Printer")
[[ -z "$PRINTER" ]] && exit -1
while true; do
    OPTION=$(chooseoption "$PRINTER")
    [[ -z "$OPTION" ]] && exit -1
    VALUE=$(chooseoptionvalue "$PRINTER" "$OPTION")
    [[ -z "$VALUE" ]] && exit -1
    lpoptions -d "$PRINTER" -o "$OPTION=$VALUE"
done
